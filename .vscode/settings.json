{
  "workbench.colorTheme": "Ayu Mirage Bordered",
  // "editor.fontLigatures": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.cursorBlinking": "phase",
  "editor.suggest.shareSuggestSelections": true,
  // "editor.snippetSuggestions": "top",
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  "editor.codeActionsOnSave": {
    "source.removeUnusedImports": true
  },
  "terminal.external.osxExec": "iTerm.app",
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "editor.tabCompletion": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "debug.javascript.autoAttachFilter": "disabled",
  "workbench.iconTheme": "material-icon-theme",
  "git.autofetch": true,
  "eslint.onIgnoredFiles": "warn",
  "markdown-preview-github-styles.colorTheme": "light",
  "terminal.integrated.shellIntegration.enabled": true,
  "editor.stickyScroll.enabled": true,
  "screencastMode.keyboardOptions": {
    "showKeys": false,
    "showKeybindings": true,
    "showCommands": true,
    "showCommandGroups": true,
    "showSingleEditorCursorMoves": true
  },
  "redhat.telemetry.enabled": false,
  "workbench.editor.labelFormat": "short",
  "settingsSync.ignoredExtensions": ["golang.go"],
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "go.toolsManagement.autoUpdate": true,
  "editor.renderWhitespace": "all",
  "[toml]": {
    "editor.defaultFormatter": "be5invis.toml"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "timonwong.shellcheck"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "right",
  // Apparently this toggling this setting fixes the VSCode package.json schema error I see from time to time?
  // See https://stackoverflow.com/a/75596916
  // "workbench.settings.openDefaultSettings": true
}
